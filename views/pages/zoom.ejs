<style>
#image_zoom {
    display: none;
    position: fixed;
    z-index: 999999999;
    padding-top: 100px;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgb(0,0,0);
    background-color: rgba(0,0,0,0.9);
}
#image_zoom > img {
    margin: auto;
    display: block;
    /*width: 80%;*/
    /*max-height: 400px;*/
    max-height:80%;
    -webkit-animation-name: zoom;
    -webkit-animation-duration: 0.6s;
    animation-name: zoom;
    animation-duration: 0.6s;
}
@-webkit-keyframes zoom {
    from {-webkit-transform: scale(0)}
    to {-webkit-transform: scale(1)}
}
@keyframes zoom {
    from {transform: scale(0)}
    to {transform: scale(1)}
}
#image_zoom_close {
    position: absolute;
    top: 15px;
    right: 35px;
    color: white;
    font-size: 42px;
    font-weight: bold;
    transition: 0.3s;
}
#image_zoom_close:hover,
#image_zoom_close:focus {
    color: #bbb;
    text-decoration: none;
    cursor: pointer;
}
@media only screen and (max-width: 700px) {
    #image_zoom > img {
        width: 90%;
    }
}
</style>
<script>
    function zoomImage(img) {
        //$("#image_zoom_id").attr("src", img.src);
        //$("#image_zoom").css("display", "block");
        var image_zoom_id = document.getElementById("image_zoom_id");
        image_zoom_id.src = img.src;
        var image_zoom = document.getElementById("image_zoom");
        image_zoom.style.display = "block";
    }
</script>

	</head>
	<body>
<div id="image_zoom">
    <!--<span id="image_zoom_close" onclick='$("#image_zoom").css("display","none")'>&times;</span>-->
    <span id="image_zoom_close" onclick='document.getElementById("image_zoom").style.display = "none";'>&times;</span>
    <img id="image_zoom_id">
</div>

<br/><br/>
<div class="row">
